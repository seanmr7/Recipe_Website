<div class="container-fluid">
  <div class="row">
    <% if user_signed_in? %>
      <div class="col-md-2 side-profile">
        <%= render "users/sidebar" %>
      </div>
      <% end %>
      <div class="col-md-8 offset-md-2">
        <h1>All Recipes</h1>
        <ul class="list-group list-group-flush">
          <%= render partial: "recipe_list", collection: @recipes, as: :recipe%>
        </ul>
      </div> 
  </div>
</div>